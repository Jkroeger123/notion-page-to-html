{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "target": "ES2015",
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true,
    "rootDirs": ["src", "src/__tests__"],
    "allowJs": true,
    "lib": ["es2019"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
